{
  "name": "@takram/planck-loader",
  "version": "0.3.0",
  "description": "Provides for parallel and sequential data loading and progress observation",
  "repository": "takram-design-engineering/planck-loader",
  "main": "dist/planck-loader.js",
  "browser": "dist/planck-loader.js",
  "module": "dist/planck-loader.module.js",
  "author": "Shota Matsuda",
  "license": "MIT",
  "homepage": "http://takram.com/projects/planck",
  "files": [
    "package.json",
    "README.md",
    "dist/planck-loader.js",
    "dist/planck-loader.min.js",
    "dist/planck-loader.module.js",
    "src"
  ],
  "scripts": {
    "build": "npm-run-all main:compile main:uglify",
    "main:compile": "rollup -c",
    "main:uglify": "uglifyjs --compress --mangle --output dist/planck-loader.min.js dist/planck-loader.js",
    "test": "npm-run-all lint test:compile test:cloud",
    "test:compile": "npm-run-all --parallel test:compile:rollup test:compile:webpack",
    "test:compile:rollup": "rollup -c rollup.config.unit.js",
    "test:compile:webpack": "webpack --config webpack.config.unit.js",
    "test:cloud": "mocha test/setup.js",
    "lint": "eslint src test",
    "prewatch": "npm-run-all main:compile test:compile",
    "watch": "npm-run-all --parallel watch:main watch:test watch:rollup watch:webpack serve",
    "watch:main": "nodemon -C --watch rollup.config.js --watch src --exec 'npm-run-all main:compile'",
    "watch:test": "nodemon -C --watch test --exec 'npm-run-all test:compile'",
    "watch:rollup": "nodemon -C --watch rollup.config.unit.js --exec 'npm run test:compile:rollup'",
    "watch:webpack": "nodemon -C --watch webpack.config.unit.js --exec 'npm run test:compile:webpack'",
    "serve": "browser-sync start --server . --files dist --startPath test --no-open --no-notify"
  },
  "peerDependencies": {
    "@takram/planck-core": "0.x",
    "@takram/planck-event": "0.x"
  },
  "devDependencies": {
    "@takram/eslint-config-planck": "^0.3.1",
    "@takram/planck-core": "^0.2.6",
    "@takram/planck-event": "^0.4.1",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "browser-sync": "^2.18.13",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chalk": "^2.3.0",
    "eslint": "^4.10.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "express": "^4.16.2",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "~8.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "sauce-connect-launcher": "^1.2.3",
    "saucelabs": "^1.4.0",
    "sinon": "^4.0.2",
    "sinon-chai": "^2.14.0",
    "source-map-support": "^0.5.0",
    "uglify-js": "^3.1.6",
    "webpack": "^3.8.1"
  },
  "saucelabs": {
    "framework": "mocha",
    "platforms": [
      [
        "Windows 8.1",
        "internet explorer",
        "11.0"
      ],
      [
        "Windows 10",
        "microsoftedge",
        "13.10586"
      ],
      [
        "Windows 10",
        "firefox",
        "45.0"
      ],
      [
        "Windows 10",
        "chrome",
        "43.0"
      ],
      [
        "Linux",
        "firefox",
        "45.0"
      ],
      [
        "OS X 10.11",
        "safari",
        "10.0"
      ],
      [
        "OS X 10.11",
        "firefox",
        "45.0"
      ],
      [
        "OS X 10.11",
        "chrome",
        "43.0"
      ]
    ]
  }
}
